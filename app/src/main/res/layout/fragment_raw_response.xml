<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aaverin="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <pro.anton.averin.networking.testrest.views.androidviews.ExpandableContentRow
            android:id="@+id/headers_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            aaverin:expandable_row_content="@layout/expandable_content_headers"
            aaverin:expandable_row_title="@string/header">

        </pro.anton.averin.networking.testrest.views.androidviews.ExpandableContentRow>

        <pro.anton.averin.networking.testrest.views.androidviews.ExpandableContentRow
            android:id="@+id/body_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            aaverin:expandable_row_title="@string/response">

        </pro.anton.averin.networking.testrest.views.androidviews.ExpandableContentRow>

    </LinearLayout>

</ScrollView>