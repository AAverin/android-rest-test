<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="android:actionMenuTextColor">@color/text_light_primary</item>

        <!-- Support library compatibility -->
        <item name="actionMenuTextColor">@color/text_light_primary</item>

        <item name="actionBarSize">@dimen/toolbar</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>

        <item name="android:textColorPrimary">@color/c_text_dark_primary</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/text_light_primary</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/light_blue</item>
        <item name="android:actionModeBackground">@color/light_blue</item>
    </style>

    <style name="ToolbarContent">
        <item name="android:foreground">@drawable/bottom_shadow</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/text_light_primary</item>
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="BaseDialogTheme" parent="android:Theme.Holo.Light.Panel">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="donediscard_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="basic_padding">
        <item name="android:padding">12dp</item>
    </style>

    <style name="text_title">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="QueryPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_animation</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_animation</item>
    </style>

    <style name="jsonviewer_entry">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="jsonviewer_nodeKey" parent="jsonviewer_entry">

    </style>

    <style name="jsonviewer_leafKey" parent="jsonviewer_entry">

    </style>

    <style name="jsonviewer_leafValue" parent="jsonviewer_entry">

    </style>

</resources>
