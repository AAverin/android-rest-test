<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/text_light_primary</item>
        <item name="android:textColorSecondary">@color/text_light_primary</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="actionMenuTextColor">@color/text_light_primary</item>
        <item name="android:colorAccent">@color/light_blue</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ToolbarContent"></style>
</resources>
