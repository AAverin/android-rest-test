<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TestRest.Styled.ActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/TestRest.Styled.ActionBar</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="TestRest.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/dark_blue</item>
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="donediscard_text">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="basic_padding">
        <item name="android:padding">8dp</item>
    </style>

    <style name="text_title">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
    
    <style name="QueryPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_animation</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_animation</item>
    </style>

    <style name="jsonviewer_entry">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="jsonviewer_nodeKey" parent="jsonviewer_entry">

    </style>

    <style name="jsonviewer_leafKey" parent="jsonviewer_entry">

    </style>

    <style name="jsonviewer_leafValue" parent="jsonviewer_entry">

    </style>

</resources>
