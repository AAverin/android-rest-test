<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/jsonResponse_progressbar_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/jsonResponse_progressbar"
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:text="@string/entrieslist_blankslate"
        android:id="@+id/jsonResponse_blank_slate"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"/>

    <pro.anton.averin.networking.testrest.ui.views.jsonviewer.JsonTreeViewer
        android:id="@+id/jsonviewer_tree"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </pro.anton.averin.networking.testrest.ui.views.jsonviewer.JsonTreeViewer>

</LinearLayout>