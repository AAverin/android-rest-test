<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/pro.anton.averin.networking.testrest"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_blue"
    android:padding="4dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:layout_height="40dp"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_weight="95"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content">

            <TextView
                android:textSize="@dimen/abc_action_bar_title_text_size"
                android:text="@string/add_query"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        </LinearLayout>

        <ImageButton
            android:background="@null"
            android:id="@+id/ok_button"
            android:src="@drawable/ic_action_done_white"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <LinearLayout
            android:background="@color/neutral_gray"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <EditText
                android:id="@+id/key"
                android:hint="@string/key"
                android:paddingRight="8dp"
                android:layout_weight="8"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>


        <EditText
                android:id="@+id/value"
                android:hint="@string/value"
                android:layout_weight="8"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

    </LinearLayout>


</LinearLayout>